{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Noah",
  "version": "0.1.0",
  "identifier": "com.noah.wallet",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Noah Wallet",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sidecar": {
      "binaries": [
        {
          "name": "python-engine",
          "source": "../src-python/engine.py"
        }
      ]
    }
  }
}